{
  "private": true,
  "name": "unogo",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter @unogo/web-gateway dev",
    "dev:orch": "pnpm --filter ./services/orchestrator exec tsx src/index.ts",
    "dev:llm": "pnpm --filter ./services/llm-bridge exec tsx src/index.ts",
    "dev:notif": "pnpm --filter ./services/notifications exec tsx src/index.ts",
    "dev:workers": "run-p dev:orch dev:llm dev:notif",
    "dev": "run-p dev:web dev:workers",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "vercel-build": "pnpm --filter @unogo/web-gateway build",
    "build": "echo root-noop"
  },
  "devDependencies": {
    "bullmq": "^5.7.0",
    "esbuild": "0.25",
    "get-tsconfig": "^4.12.0",
    "ioredis": "^5.4.1",
    "next": "^15.5.4",
    "npm-run-all": "^4.1.5",
    "pino": "^9.0.0",
    "resolve-pkg-maps": "1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "zod": "^3.23.8"
  },
  "engines": {
    "node": "20.x"
  },
  "packageManager": "pnpm@9.12.0"
}
