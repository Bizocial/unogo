{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@unogo/channels": ["packages/channels/src/index.ts"],
      "@unogo/channels-telegram": ["packages/channels-telegram/src/index.ts"],
      "@unogo/channels-whatsapp": ["packages/channels-whatsapp/src/index.ts"],
      "@unogo/events": ["packages/events/src/index.ts"],
      "@unogo/llm": ["packages/llm/src/index.ts"],
      "@unogo/llm-claude": ["packages/llm-claude/src/index.ts"],
      "@unogo/llm-gemini": ["packages/llm-gemini/src/index.ts"],
      "@unogo/llm-openai": ["packages/llm-openai/src/index.ts"],
      "@unogo/embeddings-openai": ["packages/embeddings-openai/src/index.ts"],
      "@unogo/topics": ["packages/topics/src/index.ts"],
      "@unogo/prompts": ["packages/prompts/src/index.ts"],
      "@unogo/shared": ["packages/shared/src/index.ts"]
    }
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "services/**/*.ts",
    "packages/**/*.ts",
    "types/**/*.d.ts"
  ]
}
