{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "../../",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@unogo/channels": [
        "packages/channels/src/index.ts"
      ],
      "@unogo/channels-telegram": [
        "packages/channels-telegram/src/index.ts"
      ],
      "@unogo/channels-whatsapp": [
        "packages/channels-whatsapp/src/index.ts"
      ],
      "@unogo/events": [
        "packages/events/src/index.ts"
      ],
      "@unogo/llm": [
        "packages/llm/src/index.ts"
      ],
      "@unogo/llm-claude": [
        "packages/llm-claude/src/index.ts"
      ],
      "@unogo/llm-gemini": [
        "packages/llm-gemini/src/index.ts"
      ],
      "@unogo/llm-openai": [
        "packages/llm-openai/src/index.ts"
      ],
      "@unogo/prompts": [
        "packages/prompts/src/index.ts"
      ],
      "@unogo/shared": [
        "packages/shared/src/index.ts"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
